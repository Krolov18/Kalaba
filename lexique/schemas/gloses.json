{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Krolov18/Kalaba/blob/main/lexique/schemas/gloses.json",
  "title": "Gloses",
  "description": "Structure décrivant les attributs et la valeurs disponibles par catégorie syntaxique",
  "type": "object",
  "properties": {
    "source": {
      "$ref": "#/$defs/structure"
    },
    "destination": {
      "$ref": "#/$defs/structure"
    }
  },
  "$defs": {
    "structure": {
      "type": "object",
      "title": "",
      "description": "étiquettes morphosyntaxiques disponibles",
      "propertyNames": {
        "$ref": "https://github.com/Krolov18/Kalaba/blob/main/lexique/schemas/atomes.json#/$def/categorie"
      },
      "additionalProperties": {
        "type": ["object", "null"],
        "description": "Attributs morphosyntaxiques valides pour une catégorie syntaxique",
        "propertyNames": {
          "$ref": "https://github.com/Krolov18/Kalaba/blob/main/lexique/schemas/atomes.json#/$def/attribut"
        },
        "additionalProperties": {
          "type": "array",
          "description": "valeurs d'un attribut morphosyntaxique",
          "items": {
            "$ref": "https://github.com/Krolov18/Kalaba/blob/main/lexique/schemas/atomes.json#/$def/valeur"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    }
  }
}
