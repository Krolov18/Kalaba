{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Krolov18/Kalaba/blob/main/lexique/schemas/morphosyntax.json",
  "title": "MorphoSyntax",
  "description": "Structure décrivant les objets syntaxiques permettant de générer une grammaire FCFG",
  "type": "object",
  "properties": {
    "contractions": {
      "type": "object",
      "description": "définit les contractions à décontracter du langage."
    },
    "start": {
      "$ref": "https://github.com/Krolov18/Kalaba/blob/main/lexique/schemas/atomes.json#/$def/noeud"
    },
    "source": {
      "$ref": "#/$defs/structure",
      "properties": {
        "traductions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "array",
            "items": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      },
      "required": [
        "traductions"
      ]
    },
    "destination": {
      "$ref": "#/$defs/structure"
    }
  },
  "required": [
    "contractions",
    "source",
    "destination"
  ],
  "$defs": {
    "structure": {
      "type": "object",
      "description": "description des paramètres de la langue source.",
      "properties": {
        "syntagmes": {
          "type": "object",
          "description": "container des séquences morphosyntaxiques de la langue source.",
          "additionalProperties": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "https://github.com/Krolov18/Kalaba/blob/main/lexique/schemas/atomes.json#/$def/syntagmeOptionnel",
                "minLength": 1
              }
            }
          }
        },
        "accords": {
          "type": "object",
          "description": "container des séquences décrivant l'accord des éléments au sein des syntagmes.",
          "propertyNames": {
            "pattern": "^[A-Z]+$"
          },
          "additionalProperties": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "propertyNames": {
                    "pattern": "^[A-Z][a-z]+$"
                  },
                "additionalProperties": {
                  "pattern": "^(?:[A-Z][A-Za-z]+|\\*)$"
                }
              }
            }
          }
        },
        "percolations": {
          "type": "object",
          "description": "container décrivant la partie gauche de la règle syntaxique, le noeud."
        }
      },
      "required": [
        "syntagmes",
        "accords",
        "percolations"
      ],
      "additionalProperties": false
    }
  }
}
